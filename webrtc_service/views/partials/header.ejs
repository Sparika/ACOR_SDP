    <!-- Modal -->
    <div id="loginModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3><span class="fa fa-sign-in"></span> Login</h3>
          </div>
          <div class="modal-body">
             <a href="#" onclick="authConnect()" class="btn btn-default btn-lg"><img src="/icon64.png" height="32" width="32">Connect</a></br>
            <a href="/connect-idp.ejs">Signup</a></p></p>
            <hr>
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-default btn">Login</button>
            </form>
            <hr>
            <p>Need an account? <a href="/signup">Signup</a></p>
      </div>
    </div>


    <!-- CONNECT API -->
	<script type="text/javascript" src="/javascripts/lib/wid_api.js"></script>
	<script>
		function authConnect(){
            wid_connect({})
            .then(jwt => {
                window.location.href = "/auth/connect?jwt="+jwt
            })
		}
	</script>

